<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="northq" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<!-- qstick thing -->
	<thing-type id="qStick">
		<label>NorthQ Stick</label>
		<description>QStick thing for NorthQ Binding</description>

		<channels>
			<channel id="channelstick" typeId="stick-channel" />
		</channels>
		
		<config-description>
            <parameter name="gateway_id" type="text" required="true">
                <label>Gateway ID</label>
                <description>The q stick gateway ID</description>
            </parameter>
            <parameter name="username" type="text" required="true">
                <label>Username to be used</label>
                <description>Specifies the username that is working with the q stick.</description>
            </parameter>
            <parameter name="password" type="text" required="true">
                <label>Password to be used</label>
                <description>Specifies the password that is working with the q stick.</description>
            </parameter>
        </config-description>
	</thing-type>
	
	<channel-type id="stick-channel">
        <item-type>Switch</item-type>
        <label>NorthQ stick</label>
        <description>QStick channel for NorthQ Binding</description>
    </channel-type>

	<!-- qplug thing -->
	<thing-type id="qPlug">
		<label>NorthQ Plug</label>
		<description>QPlug thing for NorthQ Binding</description>

		<channels>
			<channel id="channelplug" typeId="plug-channel" />
		</channels>
	</thing-type>

	<channel-type id="plug-channel">
		<item-type>Switch</item-type>
		<label>NorthQ plug</label>
		<description>QPlug channel for NorthQ Binding</description>
	</channel-type>

	<!-- qmotion thing -->
	<thing-type id="qMotion">
		<label>NorthQ Motion</label>
		<description>QMotion thing for NorthQ Binding</description>

		<channels>
			<channel id="channelmotion" typeId="motion-channel" />
		</channels>
	</thing-type>

	<channel-type id="motion-channel">
		<item-type>Switch</item-type>
		<label>NorthQ motion</label>
		<description>QMotion channel for NorthQ Binding</description>
	</channel-type>

</thing:thing-descriptions>
